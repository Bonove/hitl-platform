# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Database URL (for Drizzle ORM)
# Use connection pooler URL from Supabase dashboard
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:6543/postgres?pgbouncer=true

# AI Integration (Optional - for chat functionality)
OPENAI_API_KEY=
OPENAI_MODEL="gpt-4o-mini"

# Optional - for vector search only
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"

# App URL (for production deployments on Vercel)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# File storage (optional - if app requires file uploads)
BLOB_READ_WRITE_TOKEN=